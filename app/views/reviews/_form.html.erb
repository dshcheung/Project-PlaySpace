<%= bootstrap_form_for @review, url: playspace_reviews_path(@playspace.id), html: { multipart: true } do |f| %>
  <% if @review.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @review.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.text_field :comment, label: "Leave a Review" %>
  <%= f.file_field :photo %>
  <%= f.select :rating, [1, 2, 3, 4, 5] %>
  <%= f.submit class: "btn btn-default btn-block no-margin" %>

<% end %>
