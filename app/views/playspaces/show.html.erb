<div class="container top-margin" id="playspaces-show">

  <div class="row">
    <div class="col-xs-6">
      <div>
        <%= avg_rating(@playspace) %>
      </div>
      <div><strong><%= @playspace.name.titleize %></strong></div>
      <div class="bottom-margin"><em><%= @playspace.district.titleize %>, <%= @playspace.region.upcase %></em></div>
      <div>Address: <%= @playspace.address.titleize %></div>
    </div>
    <div class="col-xs-3">
      <%= form_for :bookmark, url: bookmarks_path do |f| %>
        <%= f.hidden_field :playspace_id, {value: @playspace.id} %>
        <%= f.submit "Bookmark This Page", class: "btn btn-default" %>
      <% end %>
    </div>
    <div class="col-xs-3">
      <%= link_to 'Reviews', playspace_reviews_path(@playspace.id), class: "btn btn-default" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-md-8 features">
      <h6>Features</h6>
      <span class="features-list"><% features_list(@playspace) %>
        <% @array.each do |image| %>
          <%= image_tag(image) %>
        <% end %>
      </span>
    </div>
  </div>

</div>

<script>HideSearchToggle()</script>
