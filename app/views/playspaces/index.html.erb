<div class="top-margin" id="playspaces-index">
  <h2><%= @category.name.capitalize if @category %> Playspaces</h2>

  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <ul class="list-unstyled list-inline">
          <% if @playspaces.empty? %>
            <h1>No Results</h1>
          <% else %>
            <% @playspaces.each do |playspace| %>
              <li class="col-xs-6 col-lg-3 add-padding pull-left">
                <div class="playspace-photo">
                  <%= image_tag heroku_image_path(playspace.photo.path) %>
                </div>
                <div class="playspace-detail">
                  <span>
                    <%= avg_rating(playspace) %>
                  </span>
                  <br>
                  <span class="name"><%= link_to playspace.name.titleize, playspace_path(playspace) %></span>
                  <br>
                  <span class="district"><em><%= playspace.district.titleize %>, <%= playspace.region.upcase %></em></span>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>PlayspaceSidebar()</script>
